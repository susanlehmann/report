<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user)  do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.email_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Repeat Password" %>
      <%= f.password_field :password_confirmation %>
      
      Admin? : <%= check_box_tag "user[admin]", "1", @user.admin?  %>   
      <%= f.submit "Sign Up", class: "btn btn-primary" %>
      <%= link_to "Sign in -->", '#', class: "btn btn-lg" %>
    <% end %>
  </div>
</div>
